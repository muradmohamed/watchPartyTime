<!DOCTYPE html>
<html>
<style>
  * {
    box-sizing: border-box;
    font-family: 'Roboto';
  }
  html {
    overflow: hidden;

  }
  .container {
    display: flex;
  }
  body {
    margin: 0;
    padding: 0;
    position: relative;
    overflow: hidden;
  }
  .loader {
    z-index: 100;
    position: absolute;
    height: 100%;
    width: 100%;
    background: rgba(255,255,255,1);
      transition: all 1s;
  }
  .loaded {
    background: rgba(255,255,255,0);
  }
  .topNav {
    height: 10vh;
    width: 100vw;
    background: #333;
    align-items: center;
    justify-content: space-between;
  }
  .topNavContainer {
    padding: 0 2.5%;
    width: 25%;
    height: 100%;
    justify-content: space-around;
    align-items: center;

  }
  .topNavLeft h3 {
    color: white;
    font-size: 1.25em;

  }
  .fa-tv {
    text-shadow: 0 0 3px white;
    position: relative;
  }
  .tvEffect {
    top: 5%;
    left: 7%;
    position: absolute;
    width: 85%;
    height: 70%;
    background: #333;
  }
  .tvBackground {
    width: 100%;
    height: 100%;
    opacity: 1;
    box-shadow: 0 0 5px 3px rgba(255,255,255,0.5);
  }
  .tvColor {
    width: 16.66%;
  }
  .tvColor:nth-child(1) {
    background: white;
    box-shadow: -2px 0px 5px -0.5px white, 0px 2px 5px -0.5px white, 0px -2px 5px -0.5px white;
  }
  .tvColor:nth-child(2) {
    background: yellow;
    box-shadow: 0px 2px 5px -0.5px yellow, 0px -2px 5px -0.5px yellow;

  }
  .tvColor:nth-child(3) {
    background: rgb(92, 180, 255);
    box-shadow: 0px 2px 5px -0.5px rgb(92, 180, 255), 0px -2px 5px -0.5px rgb(92, 180, 255);
  }
  .tvColor:nth-child(4) {
    background: rgb(13, 255, 58);
    box-shadow: 0px 2px 5px -0.5px rgb(13, 255, 58), 0px -2px 5px -0.5px rgb(13, 255, 58);
  }
  .tvColor:nth-child(5) {
    background: hotpink;
    box-shadow: 0px 2px 5px -0.5px hotpink, 0px -2px 5px -0.5px hotpink;
  }
  .tvColor:nth-child(6) {
    background: red;
    box-shadow: 2px 0px 5px -0.5px red, 0px 2px 5px -0.5px white, 0px -2px 5px -0.5px red;
  }
  .topNavRight {
    justify-content: flex-end;
  }
  .shareButton {
    cursor: pointer;
    position: relative;
    justify-content: center;
    align-items: center;
    border: 2px solid rgba(255,255,255,0.5);
    border-radius: 3px;
    width: 25%;
    height: 75%;
    background: rgb(52,0,159);
    color: white;
    overflow: hidden;
  }
  .shareButtonEffect {
    height: 150%;
    width: 130%;
    position: absolute;
    top: -20%;
    right: 100%;
    background: rgba(255,255,255,0.5);
    transition: all 0.15s;
  }
  .menuClick {
    right: -10%;
  }
  .menu {
    overflow: hidden;
    position: absolute;
    justify-content: center;
    right: -25%;
    height: 90vh;
    width: 25vw;
    background: #333;
    transition: all 0.25s;
    z-index: 1;
  }
  .menuInner {
    padding-top: 25%;
    margin-right: 10%;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    width: 75%;
    height: 100%;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
  }
  .menuOption {
    border-bottom: 1px solid rgba(255,255,255,0.25);
    padding-left: 2.5%;
    position: relative;
    cursor: pointer;
    font-size: 1.25em;
    justify-content: flex-start;
    align-items: center;
    width: 100%;
    height: 10%;
    color: white;
    transition: background 0.25s;
    z-index: 1;
  }
  .menuOptionInner {
  z-index: -1;
  }
  .howWorks {
    visibility: hidden;
    width: 100%;
    height: 600%;
    background: rgb(82, 82, 82);
  }
  .collActive {
    background: rgba(255,255,255,0.5);
  }
  .collapsible {
    padding: 5% 0;
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.25s;
    color: white;
    text-align: center;
  }
  .menuActive {
    transform: translateX(-100%);
  }
  .mainWrapper {
    overflow-x: hidden;
    width: 100%;
    height: auto;

  }
  .mainLeft {
    flex-direction: column;
    width: 50vw;
    height: 90vh;
    justify-content: space-around;
    align-items: center;
  }
  .svgPic {
    height: 50%;
    width: 60%;
    background: url('cinema.svg');
    background-size: cover;
    filter: drop-shadow( 10px -10px 30px rgba(0, 0, 0, 0.5)) contrast(110%);
  }
  .mainText {
    height: 40%;
    padding: 0 5%;
    flex-direction: column;
    justify-content: space-around;
    text-align: center;
    font-size: 115%;
  }
  .mainText h1 {
    height: 50%;

  }

  .createRoom {
    justify-content: center;
    align-items: center;
    font-weight: 700;
    font-size: 1.25em;
    width: 100%;
    height: 50%;
  }

  #host {
    border-radius: 3px;
    background: rgba(52,0,159,0.8);
    padding: 0 1.25%;
    color: white;
    cursor: pointer;
    font-weight: 900;
    transition: all 0.25s;
  }
  #host:hover {
    background: rgba(52,0,159,1);
  }
  .mainRight {
    justify-content: center;
    align-items: center;
    width: 50%;
    height: 90vh;
  }
  .rightImg {
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
    background: url('remote.jpg');
    background-size: cover;
    background-position: center bottom;
  }
  .info {
    border: 2px solid rgba(255,255,255,0.4);
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border-radius: 5px;
    padding: 5% 5%;
    width: 75%;
    height: 40%;
    background: rgba(0,0,0,0.5);
    backdrop-filter: blur(5px);
    font-size: 1.5em;
    text-align: center;
    color: white;
    font-weight: bold;
    letter-spacing: 1px;
  }
  .info p {
    margin: 0;
  }

  @media only screen and (max-width: 601px) {
    .topNavContainer {
      width: 50%;
    }
    .mainWrapper {
      flex-direction: column;
      height: 180vh;
    }
    .menu {
      z-index: 100;
      right: -50%;
      width: 50%;
    }
    .mainLeft, .mainRight {
      width: 100%;
      height: 90vh;
    }
    .svgPic {
      width: 90%;
    }
  }
</style>

