document.querySelector('.menuInner').addEventListener("click", event => {
  if (event.target.classList.contains('menuOption') || event.target.classList.contains('menuOptionInner')) {
    if (event.target.classList.contains('menuOption')) {
      event.target.classList.toggle('collActive');
      let content = event.target.nextElementSibling;
      if (content.style.maxHeight) {
        content.style.maxHeight = null;
      } else {
        content.style.maxHeight = content.scrollHeight + "px";
      }
    } else {
      event.target.parentElement.classList.toggle('collActive');
      let content = event.target.parentElement.nextElementSibling;
      if (content.style.maxHeight) {
        content.style.maxHeight = null;
      } else {
        content.style.maxHeight = content.scrollHeight + "px";
      }
    }

  }
})

